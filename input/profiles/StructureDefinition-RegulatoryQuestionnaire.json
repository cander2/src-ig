{
  "resourceType": "StructureDefinition",
  "id": "RegulatoryQuestionnaire",
  "url": "http://hl7.org/fhir/uv/src-ig/StructureDefinition/RegulatoryQuestionnaire",
  "version": "0.1.0",
  "name": "RegulatoryQuestionnaire",
  "title": "Regulatory Questionnaire (LOQ / LOI / RFI)",
