        "short": "Regulatory Q&A Questionnaire",
        "definition": "Structured regulatory correspondence from a health authority."
      },
      {
        "id": "Questionnaire.meta.profile",
        "path": "Questionnaire.meta.profile",
        "min": 1,
        "fixedUri": "http://hl7.org/fhir/uv/src-ig/StructureDefinition/RegulatoryQuestionnaire"
      },
      {
        "id": "Questionnaire.identifier",
        "path": "Questionnaire.identifier",
